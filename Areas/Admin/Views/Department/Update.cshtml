@model Department;
<header>
	<h1>Update car manufacturer</h1>
	<div>
		<a asp-action="Index" class="_btn">Go back</a>
	</div>
</header>
<div class="admin_create">
	<div class="create_container">
		<form method="post">
			<input type="hidden" asp-for="@Model.Id">
			<div class="form_right">
				<div class="form_tile">
				    <input type="text" placeholder="Title" asp-for="@Model.City">
				</div>
				<div class="form_tile">
				    <input type="text" placeholder="Title" asp-for="@Model.FullAddress">
				</div>
				<div class="atr_buttons">
					<input type="submit" class="btn btn_green" value="Publish">
					<a class="btn btn_red">Cancel</a>
				</div>
			</div>
		</form>
	</div>
</div>